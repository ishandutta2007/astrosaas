---
// Fundations
import Text from "@/components/fundations/elements/Text.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
// Icons
import Edit from "@/components/fundations/icons/Edit.astro";
import Complete from "@/components/fundations/icons/Complete.astro";
import Eye from "@/components/fundations/icons/Eye.astro";
import Color from "@/components/fundations/icons/Color.astro";

const features = [
  "Contact Management",
  "Lead Tracking",
  "Customer Segmentation",
  "Email Campaigns",
  "Sales Pipeline",
  "Task Automation",
  "Reporting Dashboards",
  "Mobile Access",
  "Data Import/Export",
  "User Permissions",
  "Integration APIs",
  "Customer Support Ticketing",
];

const featureItems = [
  {
    icon: Edit,
    title: "Contact Management",
    description:
      "Easily organize and manage all your customer contacts in one place.",
  },
  {
    icon: Complete,
    title: "Lead Tracking",
    description:
      "Track leads from initial contact to conversion with detailed insights.",
  },
  {
    icon: Eye,
    title: "Sales Forecasting",
    description: "Predict future sales trends and plan strategies accordingly.",
  },
  {
    icon: Color,
    title: "Automated Workflows",
    description: "Streamline processes with customizable automated workflows.",
  },
];
---

<section id="features">
  <Wrapper variant="standard" class="py-20">
    <div class="text-center max-w-2xl mx-auto lg:text-balance">
      <Text
        tag="span"
        variant="textSM"
        class="leading-normal font-bold uppercase text-accent-700"
      >
        benefits
      </Text>
      <Text
        tag="h2"
        variant="displayMD"
        class="tracking-tight mt-4 font-semibold text-base-900"
      >
        Empowering businesses with intelligent CRM solutions
      </Text>
      <Text tag="p" variant="textBase" class="mt-4 text-base-500 font-medium">
        The most efficient way to manage customer relationships and boost sales
        performance.
      </Text>
    </div>
    <div
      class="relative py-12 mx-auto overflow-hidden overflow-x-hidden 2xl:max-w-screen-xl"
    >
      <div class="grid justify-between w-full">
        <div
          class="absolute inset-0 left-0 z-10 from-white via-transparent w-44 bg-gradient-to-r"
        >
        </div>
        <div
          class="absolute inset-0 left-0 z-10 ml-auto from-white via-transparent w-44 bg-gradient-to-l"
        >
        </div>
      </div>
      <div class="relative flex items-center gap-2 whitespace-nowrap t">
        {
          features.map((feature) => (
            <span class="inline-flex items-center font-medium relative text-base-700 bg-base-50 px-4 py-1.5 text-sm rounded-lg">
              {feature}
            </span>
          ))
        }
      </div>
    </div>
    <dl
      class="grid grid-cols-2 text-center gap-x-6 gap-y-12 lg:grid-cols-4 lg:gap-y-16"
    >
      {
        featureItems.map((item) => (
          <div>
            <div class="flex flex-col gap-3 ">
              <item.icon class="size-5 mx-auto text-accent-700" />
              <dt>
                <Text
                  tag="h3"
                  variant="textLG"
                  class="text-base-900 font-medium"
                >
                  {item.title}
                </Text>
              </dt>
            </div>
            <dd>
              <Text tag="p" variant="textBase" class="mt-2 text-base-500">
                {item.description}
              </Text>
            </dd>
          </div>
        ))
      }
    </dl>
  </Wrapper>
</section>
