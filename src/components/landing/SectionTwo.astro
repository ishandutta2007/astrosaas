---
// Assets
import { Image } from "astro:assets";
import DashboardLight from "@/images/dashboardLight.svg";
// Fundations
import Text from "@/components/fundations/elements/Text.astro";
import Button from "@/components/fundations/elements/Button.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
// Icons
import Check from "@/components/fundations/icons/Check.astro";

const sections = [
  {
    title: "Intuitive User Interface",
    description:
      "Our sleek and intuitive design ensures a smooth user experience, making CRM management effortless and enjoyable.",
    features: ["Customizable Dashboards", "Drag-and-Drop Functionality"],
  },
  {
    title: "Powerful Analytics",
    description:
      "Gain deep insights with advanced analytics tools that help you understand customer behavior and trends.",
    features: ["Real-Time Reporting", "Predictive Insights"],
  },
  {
    title: "Seamless Integrations",
    description:
      "Easily connect with your favorite tools and platforms for a unified and efficient workflow.",
    features: ["API Connectivity", "Third-Party Apps Support"],
  },
];
---

<section>
  <Wrapper variant="standard" class="py-20">
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-12 items-center">
      <div class="lg:order-last">
        <Text
          tag="span"
          variant="textSM"
          class="leading-normal font-bold uppercase text-accent-700"
        >
          more benefits
        </Text>
        <Text
          tag="h2"
          variant="displayMD"
          class="tracking-tight mt-4 font-semibold text-base-900"
        >
Customer relationships for modern businesses
        </Text>
        <Text tag="p" variant="textBase" class="mt-4 text-base-500 font-medium">
          The ultimate CRM solution for managing customer interactions and
          driving business growth.
        </Text>
        <div class="flex flex-wrap items-center gap-2 mx-auto mt-12">
          <Button
            variant="muted"
            size="sm"
            isLink
            href="https://github.com/michael-andreuzza/astrosaas">GitHub</Button
          >
          <Button
            variant="accent"
            size="sm"
            isLink
            href="https://lexingtonthemes.com"
          >
            More themes</Button
          >
        </div>
      </div>
      <div class="lg:col-span-2">
        <Image
          alt="Dashboard"
          width={900}
          height={700}
          src={DashboardLight}
          class="object-cover h-full ring-4 ring-base-50 border border-base-200 rounded-2xl"
        />
      </div>
    </div>
    <div
      class="gap-x-2 gap-y-14 mt-12 lg:gap-12 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3"
    >
      {
        sections.map((section) => (
          <div>
            <div>
              <Text tag="h3" variant="textLG" class="text-base-900 font-medium">
                {section.title}
              </Text>
              <Text tag="p" variant="textBase" class="mt-2 text-base-500">
                {section.description}
              </Text>
            </div>
            <ul
              role="list"
              class="space-y-1 mt-6 text-base font-medium text-base-900"
            >
              {section.features.map((feature) => (
                <li>
                  <div class="flex items-center gap-4">
                    <Check class="size-5 text-accent-600" />
                    <Text tag="p" variant="textSM" class="text-base-500">
                      {feature}
                    </Text>
                  </div>
                </li>
              ))}
            </ul>
          </div>
        ))
      }
    </div>
  </Wrapper>
</section>
